<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Piter">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:alpha="1"
        android:text="Информация о Санкт-Петергбурге"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        app:srcCompat="@drawable/piter"
        tools:layout_editor_absoluteX="-40dp"
        tools:layout_editor_absoluteY="-55dp" />

    <ScrollView
        android:id="@+id/textView4"
        android:layout_width="403dp"
        android:layout_height="592dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="590dp"
            android:background="#8BFFFFFF"
            android:text="Красивейший город России, вторая по величине, столица. Немногие города нашей родины могут похвастаться таким архитектурным и культурным наследием как Питер. Исторический центр Санкт-Петербурга и связанные с ним группы памятников входят в Список всемирного наследия ЮНЕСКО.В городе имеется свыше 200 музеев и их филиалов: Эрмитаж, Русский музей, и т.д. Эрмитаж является одним из наиболее важных художественных музеев в мире. Он гордится большой коллекцией европейского искусства. Питер славен также своими поэтами, писателями и композиторами. Красота церквей Питера потрясает. Здесь есть храмы 42 конфессии, включая единственный в Европе буддийский монастырь и капеллу Мальтийского ордена."
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.478"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="16dp"
        android:text="Назад"
        android:onClick="OnClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="302dp" />
</androidx.constraintlayout.widget.ConstraintLayout>