<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="50">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/moscow1"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="23dp" />

    <TextView
        android:id="@+id/moscow"
        android:layout_width="252dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:text="Информация о Москве"
        android:textSize="23dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ScrollView
        android:id="@+id/textView3"
        android:layout_width="419dp"
        android:layout_height="591dp"
        app:layout_constraintTop_toBottomOf="@+id/moscow"
        tools:layout_editor_absoluteX="-8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="553dp"
            android:layout_marginHorizontal="10dp"
            android:background="#4BFFFCFC"
            android:text="Москва – столица и крупнейший город России, экономический, политический, культурный, научный и туристический центр страны. Три главных достопримечательности Москвы – это Кремль, Красная площадь и Арбат. Естественно, достопримечательностей сотни, и очень важных, но в любую экскурсию по Москве туристу предлагаются, в первую очередь, именно эти три места.Большой интерес вызывает у туриста московские и подмосковные усадьбы, например, знаменитые Царицыно, Архангельское, Коломенское, Кусково благодаря прекрасной архитектуре и знаменитым хозяевам.  Нельзя обойти вниманием и величественные соборы, такие, как собор Василия Блаженного, храм Христа Спасителя, и, конечно, Новодевичий монастырь."
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/moscow" />
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="16dp"
        android:onClick="OnClick"
        android:text="Назад"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />
</androidx.constraintlayout.widget.ConstraintLayout>