<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Kazan">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/kazan"
        tools:layout_editor_absoluteX="-59dp"
        tools:layout_editor_absoluteY="28dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="252dp"
        android:layout_height="42dp"
        android:text="Информация о Казани"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="589dp"
        android:background="#8BFFFFFF"
        android:textColor="@color/black"
        android:textSize="22dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="57dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:text="Столица Республики Татарстан входит в топ-5 самых посещаемых городов страны. Сюда тоже едут ради экскурсионного отдыха. Здесь есть собственный Кремль, чьи православные храмы соседствуют с огромной современной мечетью Кул-Шариф. Отдельного визита заслуживает исторический город-остров Свияжск, который стоит посреди на Волги. Он заявлен кандидатом в список объектов Всемирного культурного наследия ЮНЕСКО, куда должен войти к 2017 году. В Казань также можно приехать с детьми и прекрасно провести время в комплексе развлечений «Казанская Ривьера» со своим пляжем и аквапарком."
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="28dp"
        android:onClick="back"
        android:text="Назад"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />
</androidx.constraintlayout.widget.ConstraintLayout>