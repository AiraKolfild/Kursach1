<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Altai">

    <ImageView
        android:id="@+id/imageView10"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.7"
        app:srcCompat="@drawable/altai"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-22dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="252dp"
        android:layout_height="42dp"
        android:layout_marginTop="10dp"
        android:text="Информация об Алтае"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="back"
        android:text="Назад"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <ScrollView
        android:id="@+id/textView17"
        android:layout_width="396dp"
        android:layout_height="598dp"
        app:layout_constraintTop_toBottomOf="@+id/textView16"
        tools:layout_editor_absoluteX="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="553dp"
            android:background="#8BFFFFFF"
            android:text="Республика Алтай и Алтайский край представляют собой один большой климатический курорт. Сюда едут, чтобы увидеть небывалое природное разнообразие этих мест, где сходятся альпийские луга и степи, снежные пики и бескрайние плоскогорья, озера и ледники. Очень ценят Алтай любители народной медицины. Пантам, или неокрепшим рогам оленей-маралов, приписывается огромная омолаживающая сила, а здешний мед исцеляет просто от всех недугов. Главный официальный курорт Алтая — Белокуриха. Здесь необычно мягкий для Сибири климат и целебный воздух. К аэротерапии следует добавить радоновые ванны и лечебные грязи из соленых алтайских озер. Белокуриха также активно развивается и как горнолыжный курорт."
            android:textColor="@color/black"
            android:textSize="22dp"
            tools:layout_editor_absoluteX="0dp" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>