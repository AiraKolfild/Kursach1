<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sochi">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="786dp"
        android:layout_height="1308dp"
        android:alpha="0.7"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/sochi1"
        tools:layout_editor_absoluteX="-280dp"
        tools:layout_editor_absoluteY="-377dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Информация о Сочи"
        android:textColor="@color/black"
        android:textSize="23dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />


    <ScrollView
        android:id="@+id/textView6"
        android:layout_width="393dp"
        android:layout_height="587dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="616dp"
            android:background="#8BFFFFFF"
            android:text="Курортная столица России замыкает первую тройку самых посещаемых городов страны. Зимняя Олимпиада 2014 года сделала из него мега-звезду европейского уровня. Летом сюда едут искупаться в теплом Черном море и позагорать. Пляжи вытянулись полосой в 118 км, и все они галечные. Первый искусственный песчаный пляж появился только летом прошлого года в курортном районе Имеретинский, рядом с Олимпийским парком. Зимой, в конце декабря в Сочи и Красной Поляне собираются любители горных лыж. К их услугам сразу три зоны катания с инфраструктурой олимпийского уровня. Но, независимо от времени года, в Сочи всегда кипит жизнь. Этот курорт рассчитан прежде всего на людей молодых, активных и с определенным достатком: цены здесь не уступают московским."
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:layout_editor_absoluteX="0dp" />
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="312dp"
        android:layout_marginTop="8dp"
        android:onClick="back"
        android:text="Назад"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</androidx.constraintlayout.widget.ConstraintLayout>