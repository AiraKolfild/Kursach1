<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Yalta">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/yalta1"
        tools:layout_editor_absoluteX="-186dp"
        android:alpha="0.7"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="252dp"
        android:layout_height="42dp"
        android:text="Информация о Ялте"
        android:textColor="@color/black"
        android:textSize="23dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="403dp"
        android:layout_height="613dp"
        android:background="#8BFFFFFF"
        android:text="Как и в случае с Сочи и Геленджиком, Ялта — не просто город, а целая курортная зона. Она тянется вдоль Южного берега Крыма почти на 70 км. Здесь преобладают галечные, хотя встречаются и песчаные. Вход в воду удобный, присутствует вся необходимая инфраструктура. Недаром именно в Ялте находится единственный на полуострове пляж (Массандровский), который отмечен международным знаком качества — «Голубым флагом».  Курорт также предлагает богатую экскурсионную программу: здесь можно не только загорать и купаться, но и бродить в аллеях аристократических парков, посещать царские дворцы, литературные и художественные музеи, развалины античных городов и памятники Второй мировой."
        android:textColor="@color/black"
        android:textSize="22dp"

        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:layout_editor_absoluteX="0dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backk"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="304dp"
        android:layout_marginTop="16dp"
        android:onClick="OnClick"
        android:text="Назад"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:layout_editor_absoluteX="307dp" />
</androidx.constraintlayout.widget.ConstraintLayout>